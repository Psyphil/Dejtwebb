@model IEnumerable<WebbDejt2.Models.ApplicationUser>

@{
    ViewBag.Title = "Index";
}

@* Html.BeginForm is used to add a form in an Html document * @@ * Pass the action name in the first parameter, controller name in the second parameter and specify the form request type as get *@

<div class="col-lg-12 well">
    @using (Html.BeginForm())
    {
    <div class="input-group">
        @Html.TextBox("search", null, new { @class = "form-control", placeholder = "Search for a user" })
        <span class="input-group-btn"><input type="submit" name="submit" value="Search" class="btn btn-default" /></span>
    </div>
    }
</div>

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Hidden)
            </th>*@
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Hidden)
                </td>*@
            <td>
                @Html.ActionLink("Posts", "Index", "Posts", new { toid = item.Id }, new { })
            </td>
            <td>
                @Html.ActionLink("Profile", "Profile", "Account", new { username = item.Email }, new { })
            </td>
        </tr>
    }

</table>
