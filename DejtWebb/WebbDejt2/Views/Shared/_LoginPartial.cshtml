@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    
        
    
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink(AppResources.FindUsers, "Index", "UserList")</li>
        <li>
            <a href="@Url.Action("Index", "Friends", new { })">@AppResources.Friends (@Html.Action("CheckFriendRequests", "Friends", null))</a>
        </li>
        <li>
            @Html.ActionLink(AppResources.Profile, "Profile", "Account", new { username = User.Identity.Name }, new { })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">@AppResources.Logout</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        @*<li>@Html.ActionLink("Users", "Index", "Users")</li>*@
        
        <li>@Html.ActionLink(@AppResources.Register, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(AppResources.Login, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}